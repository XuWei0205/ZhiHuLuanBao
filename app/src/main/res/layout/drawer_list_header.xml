<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/sign_in"
        android:text="@string/default_name"
        android:textSize="15sp"
        android:paddingTop="5dp"
        android:paddingLeft="60dp"
        android:paddingRight="40dp"
        android:paddingBottom="5dp"
        android:drawableLeft="@mipmap/my_log"
        android:drawableStart="@mipmap/my_log"
        android:background="@color/black"
        android:layout_width="match_parent"
        android:layout_height="60dp"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/sign_in"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout">
        <Button
            android:id="@+id/collect"
            android:text="我的收藏"
            android:textSize="15sp"
            android:drawableLeft="@mipmap/collect"
            android:drawableStart="@mipmap/collect"
            android:background="@drawable/button_select"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_below="@+id/sign_in" />
        <ImageView
            android:layout_width="2dp"
            android:layout_height="50dp" />
        <Button
            android:id="@+id/download"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:textSize="15sp"
            android:text="离线下载"
            android:drawableLeft="@mipmap/download"
            android:drawableStart="@mipmap/download"
            android:background="@drawable/button_select"
            android:layout_below="@+id/sign_in"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

    </LinearLayout>
    <Button
        android:id="@+id/to_home"
        android:textSize="20sp"
        android:text="首页"
        android:paddingRight="80dp"
        android:drawableLeft="@mipmap/menu_home"
        android:drawableStart="@mipmap/menu_home"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:paddingLeft="80dp"
        android:background="@drawable/sign_in_select"
        android:layout_below="@+id/linearLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>